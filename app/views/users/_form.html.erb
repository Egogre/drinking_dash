<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div>
  <div class="main_form">
    <%= simple_form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      </br>
      <%= f.label :email %>
      <%= f.text_field :email %>
      </br>
      <%= f.label :password %>
      <%= f.password_field :password %>
      </br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      </br>
      <%= f.submit "Create my account" %>
    <% end %>
  </div>
</div>
