<%= form_for @payment do |f| %>
  <%= f.label :card_type, "Credit Card Type" %>
  <%= f.select :card_type, options_for_select(Payment.credit_card_types)%><br/>
  <%= f.label :credit_card_number, "Credit Card Number" %>
  <%= f.text_field :credit_card_number %><br/>
  <%= f.label :expiration_date, "Expiration Date" %>
  <%= f.date_select :expiration_date, :discard_day => true, :use_two_digit_numbers => true, :start_year => Date.today.year, :end_year => (Date.today.year+10) %><br/>
  <%= f.submit "Add a New Credit Card"%>
<% end%>
